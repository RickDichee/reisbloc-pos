# Variables de Entorno - Copia este archivo a .env.local

# Firebase Configuration
VITE_FIREBASE_API_KEY=your_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Supabase Configuration (migración gradual)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase Feature Flags (migración gradual - todos false inicialmente)
VITE_SUPABASE_AUTH_ENABLED=false
VITE_SUPABASE_DB_ENABLED=false
VITE_SUPABASE_STORAGE_ENABLED=false

# MercadoPago Configuration (reemplaza Clip)
VITE_MERCADOPAGO_PUBLIC_KEY=your_mercadopago_public_key
VITE_MERCADOPAGO_ACCESS_TOKEN=your_mercadopago_access_token

# App Configuration
VITE_APP_ENV=development
VITE_APP_URL=http://localhost:5173
VITE_LOG_LEVEL=info
